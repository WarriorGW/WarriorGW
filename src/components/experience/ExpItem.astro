---
interface Props {
	title: string;
	description: string;
	link?: string;
	date: string;
}

const { title, description, link, date } = Astro.props;
---

<li class="mb-10 ms-4">
	<div
		class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-gray-900 bg-gray-700"
	>
	</div>
	<time class="mb-1 text-sm font-normal leading-none text-sky-200/70"
		>{date}</time
	>
	<h3 class="text-lg font-semibold text-yellow-200/90 mt-4">
		{title}
	</h3>
	<p class="mb-4 text-base font-normal text-gray-200/90 text-pretty">
		{description}
	</p>
	{
		link && (
			<a
				href={link}
				target="_blank"
				rel="noopener noreferrer"
				class="inline-flex items-center px-4 py-1 font-medium  rounded-lg hover:text-purple-700 focus:z-10 focus:ring-4 focus:outline-none focus:text-blue-700 text-sky-700 text-xl hover:gap-x-1"
			>
				Saber mas
				<svg
					class="w-3 h-3 ms-2 rtl:rotate-180"
					aria-hidden="true"
					xmlns="http://www.w3.org/2000/svg"
					fill="none"
					viewBox="0 0 14 10"
				>
					<path
						stroke="currentColor"
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M1 5h12m0 0L9 1m4 4L9 9"
					/>
				</svg>
			</a>
		)
	}
</li>
